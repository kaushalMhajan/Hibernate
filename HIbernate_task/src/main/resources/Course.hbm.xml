<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "it.edu.Course" table = "Course">
      <id name = "course_Id" type = "string" column = "course_id"/>         
      <property name = "title" column = "course_title" type="string"/>
      <property name = "duration" column = "course_duration" type = "int"/>
      <property name = "fees" column = "course_fees" type = "int"/>     
   </class>
</hibernate-mapping>